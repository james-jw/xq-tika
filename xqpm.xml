<?xml version="1.0" encoding="UTF-8" ?>
<!-- xqpm dependency file -->
<config name="http://xq-tika" abbrev="xq-tika" version="1.0">
  <dependencies>
    <directory path="{{repo}}">
      <dependency name="xq-tika" />
      <dependency name="install" type="command" path="{{base}}/bin/basex">
        <argument>-c"repo install '{{repo}}/xq-tika/src/xq-tika.xqm'"</argument>
      </dependency>
    </directory>
    <directory path="{{lib}}">
      <dependency name="apache-tika" type="binary" path="http://ftp.wayne.edu/apache/tika/tika-app-1.10.jar" />
    </directory>
  </dependencies>
</config>
